{% block script %}
    <script>
        $(document).ready(function () {

            $('.user_status').click(function () {
                var value = $(this).val();
                $.ajax({
                    url: '{{ path("update_status") }}',
                    type: 'post',
                    data: {'id': value},
                    success: function (result) {
                        location.reload();
                    }
                });
            })

            $('#register').validate({
                'errorElement': 'span',
                'errorClass': 'text-danger',
                rules: {
                    'register[firstname]': 'required',
                    'register[email]': {
                        required: true,
                        email: true,
                    },
                    'register[password][first]': {
                        required: true,
                    },
                    'register[password][second]': {
                        required: true,
                        equalTo: "#register_password_first"
                    },
                    'register[country]': true,
                    'register[state]': true,
                    'register[city]': true,
                    'register[image]': {
                        required: true,
                        extension: "jpg"
                    },
                    'register[hobbies][]': {
                        required: true
                    }
                },
                messages: {
                    'register[firstname]': 'This field is required',
                    'register[email]': {
                        required: 'This Field is required',
                        email: 'Enter valid email'
                    },
                    password: {
                        minlength: 'Password must be at least 8 characters long'
                    }
                }
            });
        })
    </script>
