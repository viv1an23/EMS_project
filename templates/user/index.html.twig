{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <!-- DataTales Example -->
    <div class="mt-lg-5">
        <br>
        <a href="{{ path('store_user') }}" class="mb-4"><button class="float-left font-weight-bold btn btn-success">Add Users</button></a>
        <div class="card shadow mb-5 mt-lg-5 ">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Users</h6>

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th {% if users.isSorted('firstName') %} class="sorted"{% endif %}>
                                FirstName {{ knp_pagination_sortable(users, '^', 'firstName') }}
                            </th>
                            <th {% if users.isSorted('lastName') %} class="sorted"{% endif %}>
                                LastName {{ knp_pagination_sortable(users, '^', 'lastName') }}
                            </th>
                            <th {% if users.isSorted('email') %} class="sorted"{% endif %}>
                                Email {{ knp_pagination_sortable(users, '^', 'email') }}
                            </th>
                            <th class="sorting_disabled">Status</th>
                            <th colspan="3" class="sorting_disabled">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.firstName }}</td>
                                <td>{{ user.lastName }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% if(user.active == 0) %}
                                        <button class="btn btn-danger user_status" value="{{ user.id }}">Unblock</button>
                                    {% else %}
                                        <button class="btn btn-success user_status" value="{{ user.id }}">Block</button>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('store_user', {id: user.id}) }}"><button class="btn btn-primary" >Edit</button></a>
                                    <button class="btn btn-danger">Delete</button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="navigation">
                        {{ knp_pagination_render(users) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

